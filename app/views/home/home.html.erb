<div class="z-0 mx-auto md:max-w-[512px] md:my-10">
  <%= image_tag("/prompt_image.jpg", class: 'md:rounded-xl md:shadow-lg') %>
</div>

<div class="max-md:grow bg-white -mt-10 z-50 rounded-t-[33px] shadow-[0_11px_30px_19px_black] flex flex-col justify-between md:mt-0 md:mx-auto md:px-16 md:py-4 md:rounded-xl md:shadow-xl md:shadow-[0_2px_2px_0px_rgba(0,0,0,0.25)]">
  <div class="grow mx-auto pt-10">
    <div class="font-light space-y-2">
      <p class="text-[24px] md:text-[32px]">Guess today's prompt !</p>
      <p class="text-[13px] md:text-[22px]"><%= @generated_at %></p>
    </div>

    <div class="flex flex-row flex-wrap justify-center text-[15px] font-light mt-8 md:text-[22px]">
      <% @prompt_helper.split(";").each do |word| %>
        <span><%= word %>&nbsp;&nbsp;&nbsp;&nbsp;</span>
      <% end %>
    </div>

    <%= turbo_frame_tag 'answer_results_frame' do %>
      <div class="py-4 md:py-9"><br/></div>
    <% end %>

    <div class="px-10">
      <%= form_with url: "/answer", method: :post, class: 'flex flex-col' do |form| %>
        <%= form.text_field "answer", class: "shadow-[0_2px_2px_0px_rgba(0,0,0,0.25)] border-[0.50px] border-[#B3B3B3] rounded-md" %>
        <%= form.submit "Check", class: 'mt-4 py-2 px-3 mx-20 rounded-md bg-gradient-to-r from-green-400 to-blue-500 text-white font-extralight text-[12px] shadow-[0_2px_2px_0px_rgba(0,0,0,0.25)] md:text-[22px]' %>
      <% end %>
    </div>
  </div>

  <div class="mt-4 text-[10px] space-y-2 pb-4 md:mt-16 md:text-[18px]">
    <div class="font-bold">JeopardAI</div>
    <div class="font-extralight">Created by Marek Pankowski Â© 2024</div>
    <div class="font-extralight">
      <a href="https://mkpanq.com">mkpanq.com</a> |
      <a href="https://x.com/mkpanq">Twitter</a> |
      <a href="https://github.com/mkpanq">Github</a> |
      <a href="https://bento.me/mkpanq">Bento</a> |
      <a href="https://ko-fi.com/mkpanq">Ko-Fi</a>
    </div>
  </div>
</div>
