<div class="flex flex-col space-y-5">
  <div class="mx-auto font-bold text-center text-white space-y-3 max-w-[512px]
              bg-gradient-to-bl from-red-800 via-yellow-700 to-yellow-300
              shadow-md rounded-xl px-10 py-3">
    <h1 class="text-3xl">JeopardAI</h1>
    <h2 class="text-xl">Guess today's prompt !</h2>
    <h3 class="text-md"><%= @generated_at %></h3>
  </div>
  <div class="flex flex-row justify-center align-center overflow-hidden px-12">
      <%= image_tag("/prompt_image.jpg", class: "justify-center object-cover rounded-xl max-w-[512px]") %>
  </div>
  <div class="text-center space-y-3">
    <div class="text-3xl flex flex-row flex-wrap mx-auto justify-center">
      <% @prompt_helper.split(";").each do |word| %>
          <span class="text-white">
            <%= word %>
            &nbsp;&nbsp;
          </span>
        <% end %>
    </div>

    <%= form_with url: "/answer", method: :post, class: "flex flex-row items-center space-y-3 space-x-2 justify-center"  do |form| %>
      <%= form.text_field "answer", class: 'w-3/5 py-3 rounded-md shadow-md' %>
      <%= form.submit "->",
                      class:'
                      font-bold text-white
                      bg-gradient-to-bl from-red-800 via-yellow-600 to-yellow-500
                      shadow-md border rounded-xl px-5 py-3 border-slate-600' %>
    <% end %>
  </div>
  <div class="text-center text-2xl mx-auto">
    <%= turbo_frame_tag 'answer_results_frame' do %>
    <% end %>
  </div>
  <div class="flex flex-col space-y-2.5 text-gray-500 mx-auto mb-10">
    <div class="flex flex-col justify-center space-y-2">
      <div class="text-center">Created by Marek Pankowski &copy; <%= Date.today.year %></div>
      <div class="flex flex-row justify-center space-x-2">
        <a href="https://mkpanq.com">mkpanq.com</a>
        <a href="https://x.com/mkpanq">Twitter</a>
        <a href="https://github.com/mkpanq">Github</a>
        <a href="https://bento.me/mkpanq">Bento</a>
        <a href="https://ko-fi.com/mkpanq">Ko-Fi</a>
      </div>
    </div>
  </div>
</div>
